// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("MYSQL_DB_URL")
}

model User {
  id          String       @id @unique @default(uuid())
  email       String       @unique
  phone       String       @unique
  password    String
  name        String
  createdAt   DateTime     @default(now()) @db.Timestamp(3)
  updatedAt   DateTime     @updatedAt @db.Timestamp(3)
  userDevices UserDevice[]

  @@map("users")
}

model UserDevice {
  id           String   @id @unique @default(uuid())
  deviceId     String
  userId       String
  accessToken  String   @db.Text
  refreshToken String   @db.Text
  createdAt    DateTime @default(now()) @db.Timestamp(3)
  updatedAt    DateTime @updatedAt @db.Timestamp(3)
  user         User     @relation(fields: [userId], references: [id])

  @@unique([deviceId, userId])
  @@map("user_devices")
}

model Investment {
  id        String   @id @unique @default(uuid())
  userId    String
  title     String
  amount    BigInt
  date      DateTime
  createdAt DateTime @default(now()) @db.Timestamp(3)
  updatedAt DateTime @updatedAt @db.Timestamp(3)

  @@index([userId])
  @@index([date])
  @@index([userId, date])
  @@map("investments")
}

model Consumption {
  id        String   @id @unique @default(uuid())
  userId    String
  title     String
  amount    BigInt
  date      DateTime
  createdAt DateTime @default(now()) @db.Timestamp(3)
  updatedAt DateTime @updatedAt @db.Timestamp(3)

  @@index([userId])
  @@index([date])
  @@index([userId, date])
  @@map("consumptions")
}

